<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controller">
   <center>
      <ScrollPane hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="chatBox" />
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <TextArea  fx:id="msgText" maxWidth="257.0" prefHeight="1.0" prefRowCount="1" prefWidth="257.0" promptText="Сообщение" wrapText="true" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="12.0" />
               </font></TextArea>
            <Button fx:id="btnSend" alignment="CENTER" mnemonicParsing="false" onAction="#sendMsg" prefHeight="46.0" text="Send" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
